page_width = 750px

.background-white
  background-color: #fefefa
html
  background-color: #fefefa

ul.inline
  width: page_width
  margin: auto
  li
    display: inline-block

li.left
  width: 320px
  text-align: right

#moreAbout
  .section.code
    li.right
      position: relative
      top: 15px
  font-family: "Times New Roman"
  font-size: 24px

  .coffeescript-logo
    position: relative
    top: 9px
    height: 32px
    padding: 0 5px
  .ruby-logo
    position: relative
    top: 5px
    height: 32px
    padding: 0 5px

  li.center
    width: 110px
    img
      height: 50px
      padding: 10px 30px
      vertical-align: middle
      &.starter-league
        padding: 0
      &:hover
        cursor: pointer
        -webkit-transition:background-image 5s linear
        background-image: -webkit-radial-gradient(circle, #b1b5be, #fff 40px)
  li.right
    width: 320px

.pull-left
  float: left

.pull-right
  float: right

.spacer
  height: 50px

#intro
  width: page_width
  margin: auto
  position: relative
  left: 55px
  span
    font-size: 47px
    line-height: 100px
    vertical-align: top
  .face
    box-shadow: 0px 0px 20px 0px gray
    border-radius: 50px
    width: 100px
    height: 100px
    margin: 0 10px


header
  h3
    font-size: 42px
    float: left
  margin-bottom: 50px
  #links
    float: right
    li
      font-family: sans-serif
      font-size: 18px
      margin: 10px
      display: inline-block
  #bottom
    height: 30px
    margin-top: 30px

.more
  h3
    font-size: 36px
  ul
    list-style-type: disc
  li.right
    margin-left: 420px
  li.left
    text-align: right
  li.left, li.right
    font-size: 18px
    margin-top: 30px
    border-radius: 20px
    padding: 10px
    background-color: #d2a05b
    color: black
    opacity: 0.8
    ul
      li
        display: block
        width: 330px

.ellipsis-overflow
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.music .more
  h3
    padding-right: 20px
    padding-bottom: 5px
  .song-title
    font-size: 20px
    width: 300px
  .song-artist
    font-size: 16px
    padding-bottom: 10px
    padding-right: 30px

.books .more
  .book-title
    font-size: 20px
    width: 300px
  .book-author
    font-size: 16px
    padding-bottom: 10px
    padding-left: 15px

.code .more
  li.right
    background-color: #084456
    color: white

.twitter .more
  h3
    padding-right: 10px
    padding-bottom: 5px
  li.left
    background-color: #3288d5
  .tweet-content
    padding-right: 20px
  .tweet-when
    font-size: 16px
    padding-bottom: 10px
    padding-right: 20px


.hide
  display: none
.more
  display: none
  height: 500px
  box-shadow: inset 0px 0px 50px -10px black, inset 0px -11px 8px -10px black
  .background
    height: 900px
    width: 100%
    position: absolute
    z-index: -1
    clip: rect(0px, 9999px, 700px, 0px)

.filler
  height: 500px
.clearfix:after
  content: "."
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%
