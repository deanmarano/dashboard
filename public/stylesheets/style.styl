/*http://www.colorschemer.com/schemes/viewscheme.php?id=7511*/
cs_gray = #DADBDB
cs_lighter_gray = #C0C2C2
cs_blue = #72A3BA
cs_lighter_blue = #A9D4E8
cs_beige = #F0E4D6
cs_brown = #B26F15
cs_red = #A80027
page_width = 750px

html
  height: 100%
  width: 100%

body
  height: 100%
  width: 100%
  margin: 0

#content
  width: page_width
  margin: auto

#moreAbout
  text-align: center
  font-family: "Times New Roman"
  font-size: 24px
  line-height: 50px
  span
    vertical-align: top
  img
    height: 50px
    padding: 0 20px
  li
    width: page_width
    height: 75px

  .coffeescript-logo
    position: relative
    top: -8px
    height: 32px
    padding: 0 5px
  .ruby-logo
    position: relative
    top: -10px
    height: 32px
    padding: 0 5px
  li

.left
  float: left

.right
  float: right


a
  color: #00B7FF

.spacer
  height: 50px

#intro
  span
    font-size: 48px
    line-height: 100px
    vertical-align: top
  .face
    border-radius: 50px
    width: 100px
    height: 100px
    margin: 0 10px



header
  h3
    font-size: 42px
    float: left
  margin-bottom: 50px
  #links
    float: right
    li
      font-family: sans-serif
      font-size: 18px
      margin: 10px
      display: inline
  #bottom
    height: 30px
    margin-top: 30px
    /*background-image: -webkit-linear-gradient(bottom, cs_gray 37%, cs_lighter_gray 69%)*/

.clearfix:after
  content: "."
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%
